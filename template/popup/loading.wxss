.handle-load {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0);
}

.handle-load-box {
  position: absolute;
  right: 50%;
  bottom: 50%;
  padding: 30rpx;
  transform: translate(50%, 50%);
  text-align: center;
  z-index: 0;
}

.handle-load-box-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 5px;
  opacity: 0.5;
  z-index: -1;
}

.handle-load-text {
  max-width: 5.5em;
  padding-top: 20rpx;
  color: inherit;
  font-size: 12px;
  line-height: 1.5;
  white-space: nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
}

.handle-load-spinner {
  display: inline-block;
  position: relative;
  width: 120rpx;
  height: 120rpx;
  vertical-align: top;
}

.handle-load-container1 .handle-load-spinner-circle,
.handle-load-container2 .handle-load-spinner-circle,
.handle-load-container3 .handle-load-spinner-circle {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background: #fff;
  background-color: currentColor;
  border-radius: 10rpx;
  animation: PopupSpinnerBounce 1.2s infinite ease-in-out;
  animation-fill-mode: both;
}

.handle-load-spinner-container {
  position: absolute;
  top: 15%;
  left: 15%;
  width: 70%;
  height: 70%;
}

.handle-load-container1 {
  transform: rotateZ(0deg);
}

.handle-load-container1 .handle-load-circle1 {
  animation-delay: -1.2s;
}

.handle-load-container1 .handle-load-circle2 {
  animation-delay: -0.9s;
}

.handle-load-container1 .handle-load-circle3 {
  animation-delay: -0.6s;
}

.handle-load-container1 .handle-load-circle4 {
  animation-delay: -0.3s;
}

.handle-load-container2 {
  transform: rotateZ(45deg);
}

.handle-load-container2 .handle-load-circle1 {
  animation-delay: -1.1s;
}

.handle-load-container2 .handle-load-circle2 {
  animation-delay: -0.8s;
}

.handle-load-container2 .handle-load-circle3 {
  animation-delay: -0.5s;
}

.handle-load-container2 .handle-load-circle4 {
  animation-delay: -0.2s;
}

.handle-load-container3 {
  transform: rotateZ(90deg);
}

.handle-load-container3 .handle-load-circle1 {
  animation-delay: -1.0s;
}

.handle-load-container3 .handle-load-circle2 {
  animation-delay: -0.7s;
}

.handle-load-container3 .handle-load-circle3 {
  animation-delay: -0.4s;
}

.handle-load-container3 .handle-load-circle4 {
  animation-delay: -0.1s;
}

.handle-load-circle1 {
  top: 0;
  left: 0;
}

.handle-load-circle2 {
  top: 0;
  right: 0;
}

.handle-load-circle3 {
  right: 0;
  bottom: 0;
}

.handle-load-circle4 {
  left: 0;
  bottom: 0;
}
