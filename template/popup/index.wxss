@keyframes PopupZoomIn {
  0% {
    transform: scale(.5);
  }
  100% {
    transform: scale(1);
  }
}
@keyframes PopupZoomOut {
  0% {
    transform: scale(1);
  }
  100% {
    transform: scale(0);
  }
}

@keyframes PopupDownIn {
  0% {
    transform: translate3d(0, -100%, 0);
  }
  100% {
    transform: translate3d(0, 0, 0);
  }
}
@keyframes PopupUpZoomOut {
  0% {
    transform: translate3d(0, 0, 0) scale(1);
  }
  100% {
    transform: translate3d(0, -100%, 0) scale(0);
  }
}

@keyframes PopupSpinnerBounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

@keyframes PopupRotate {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.handle-rotate {
  animation: PopupRotate 3s infinite linear;
  animation-fill-mode: both;
}

